datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AppModel {
  cookies         String?
  createdAt       DateTime        @default(now())
  id              String          @id @default(cuid())
  name            String?
  updatedAt       DateTime        @updatedAt
  url             String?
  userAppAccesses UserAppAccess[]
}

model UserAppAccess {
  appField   AppModel? @relation(fields: [appFieldId], references: [id])
  appFieldId String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model User {
  createdAt       DateTime        @default(now())
  email           String?         @unique
  firstName       String?
  id              String          @id @default(cuid())
  lastName        String?
  password        String
  roles           Json
  updatedAt       DateTime        @updatedAt
  userAppAccesses UserAppAccess[]
  username        String          @unique
}
